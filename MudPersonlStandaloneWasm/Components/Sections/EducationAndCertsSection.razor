                        <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Info">
                            <MudLink Target="_blank" Href="https://freecodecamp.org/certification/fcc87cc5c31-ecc3-4a71-99d0-cee34856eb74/data-analysis-with-python-v7">
                                Data Analysis with Python
                            </MudLink>
                        </MudListItem>
                    </MudList>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" md="4">
            <MudText Typo="Typo.h4" Color="Color.Primary" Class="mb-6"><b>Languages</b></MudText>
            <MudCard Elevation="3" Class="h-100">
                <MudCardContent>
                    <MudList T="string" Dense="true" ReadOnly="true">
                        <MudListItem Icon="@Icons.Material.Filled.Language" IconColor="Color.Primary">
                            <MudText Typo="Typo.body1"><b>Spanish</b> - Native / Bilingual</MudText>
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.Language" IconColor="Color.Primary">
                            <MudText Typo="Typo.body1"><b>English</b> - Full Professional</MudText>
                        </MudListItem>
                    </MudList>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    [Parameter] public string? Id { get; set; }
    [Parameter] public string? Class { get; set; }
}
